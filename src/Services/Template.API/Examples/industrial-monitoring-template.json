    "alertRules": [
      {
        "localId": "alert_1",
        "name": "Critical Temperature",
        "description": "Critical temperature threshold exceeded",
        "condition": "temperature > 85",
        "deviceTypeRef": "deviceType_1",
        "deviceRef": null,
        "severity": 3,
        "isEnabled": true,
        "actions": [
          {
            "type": "email",
            "config": {
              "subject": "CRITICAL: High Temperature Alert",
              "body": "Temperature has exceeded critical threshold of 85°C"
            }
          }
        ],
        "cooldownMinutes": 5
      },
      {
        "localId": "alert_2",
        "name": "High Vibration",
        "description": "Abnormal vibration detected",
        "condition": "rms > 5",
        "deviceTypeRef": "deviceType_2",
        "deviceRef": null,
        "severity": 2,
        "isEnabled": true,
        "actions": [],
        "cooldownMinutes": 15
      },
      {
        "localId": "alert_3",
        "name": "Low Flow Rate",
        "description": "Flow rate below minimum threshold",
        "condition": "flow_rate < 10",
        "deviceTypeRef": "deviceType_3",
        "deviceRef": null,
        "severity": 2,
        "isEnabled": true,
        "actions": [],
        "cooldownMinutes": 30
      },
      {
        "localId": "alert_4",
        "name": "High Pressure",
        "description": "Pressure exceeds safe operating limit",
        "condition": "pressure > 10",
        "deviceTypeRef": "deviceType_1",
        "deviceRef": null,
        "severity": 3,
        "isEnabled": true,
        "actions": [],
        "cooldownMinutes": 5
