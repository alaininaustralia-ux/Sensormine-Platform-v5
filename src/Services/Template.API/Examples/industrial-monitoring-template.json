      },
      {
        "localId": "dashboard_2",
        "name": "Equipment Health",
        "description": "Detailed equipment health monitoring",
        "layout": {
          "columns": 12,
          "rowHeight": 60
        },
        "widgets": [
          {
            "id": "widget_5",
            "type": "gauge",
            "position": {"x": 0, "y": 0, "w": 4, "h": 3},
            "config": {
              "title": "Temperature",
              "deviceTypeRef": "deviceType_1",
              "field": "temperature",
              "min": 0,
              "max": 100,
              "thresholds": [
                {"value": 60, "color": "green"},
                {"value": 75, "color": "orange"},
                {"value": 85, "color": "red"}
              ]
            }
          },
          {
            "id": "widget_6",
            "type": "gauge",
            "position": {"x": 4, "y": 0, "w": 4, "h": 3},
            "config": {
              "title": "Vibration RMS",
              "deviceTypeRef": "deviceType_2",
              "field": "rms",
              "min": 0,
              "max": 10,
              "thresholds": [
                {"value": 2.5, "color": "green"},
                {"value": 5, "color": "orange"},
                {"value": 7.5, "color": "red"}
              ]
            }
          },
          {
            "id": "widget_7",
            "type": "kpi",
            "position": {"x": 8, "y": 0, "w": 4, "h": 3},
            "config": {
              "title": "Active Devices",
              "type": "count",
              "assetRef": "asset_1"
            }
          }
        ],
        "filters": {
          "assetRef": "asset_3"
        }
