{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ServiceUrls": {
    "DeviceApi": "http://localhost:5293",
    "QueryApi": "http://localhost:5079",
    "DigitalTwinApi": "http://localhost:5297",
    "DashboardApi": "http://localhost:5299",
    "SchemaRegistryApi": "http://localhost:5021",
    "AlertsApi": "http://localhost:5295"
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "mcp:"
  },
  "Cache": {
    "DefaultExpirationMinutes": 5,
    "StaticDataExpirationMinutes": 60
  },
  "RateLimiting": {
    "Free": {
      "RequestsPerHour": 100
    },
    "Pro": {
      "RequestsPerHour": 1000
    },
    "Enterprise": {
      "RequestsPerHour": -1
    }
  },
  "QueryLimits": {
    "MaxTimeRangeDays": 90,
    "MaxDevicesPerQuery": 1000,
    "MaxDataPoints": 100000,
    "TimeoutSeconds": 30
  },
  "Jwt": {
    "Authority": "https://localhost:5001",
    "Audience": "sensormine-api",
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  }
}
