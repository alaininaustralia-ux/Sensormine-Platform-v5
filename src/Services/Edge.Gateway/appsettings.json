{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Edge.Gateway": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "TelemetryTopic": "telemetry.raw"
  },
  "Mqtt": {
    "Port": 1883
  },
  "DeviceApi": {
    "BaseUrl": "http://localhost:5293"
  },
  "Authentication": {
    "Enabled": false
  },
  "RateLimiting": {
    "Enabled": true,
    "MaxMessagesPerWindow": 100,
    "WindowSeconds": 60
  }
}
